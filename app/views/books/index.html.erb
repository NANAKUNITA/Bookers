<h1>Books</h1>

<table>
     <thead>
        <tr>
  　　　　　　　<th>Tilte</th>
  　　　　　　　<th>Body</th>
  　　　　　　　<th colspan="3"></th>
        </tr>
     </thead>
     <tbody>
      <% @books.each do |book| %>
      <tr>
         <td class="posted-title"><%= @book.title %></td>
         <td class="posted-body"><%= @book.body %></td>
         <td class="link-show"><%= link_to "Show", book_path(book.id) %></td>
         <td class="link-edit"><%= link_to "edit", edit_book_path(book.id) %></td>
         <td class="link-destroy"><%= link_to "destroy", book, method: :delete, "data-confirm"=>"Are you sure?" %></td>
      </tr>
      <% end %>
     </tbody>
</table>

<h2>New Book</h2>
<%= form_with model:@book do |f| %>

<h4>Title</h4>
 <%= f.text_field :title %>

<h4>Body</h4>
 <%= f.text_area :body %>

 <%= f.submit 'Create Book' %>
<% end %>